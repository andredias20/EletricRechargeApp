<?xml version="1.0" encoding="utf-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/tv_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_app_title"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_tab_cars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_tab_cars"
        android:textStyle="bold"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_app_title"
        />

    <TextView
        android:id="@+id/tv_tab_favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_tab_favorites"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toEndOf="@id/tv_tab_cars"
        app:layout_constraintTop_toTopOf="@id/tv_tab_cars"/>

    <ImageView
        android:id="@+id/iv_car_image"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/tesla_model_x"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tab_cars"
        />
    <TextView
        android:id="@+id/tv_car_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_car_price"
        app:layout_constraintTop_toBottomOf="@id/iv_car_image"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/tv_car_price_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 99.99"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/iv_car_image"
        app:layout_constraintStart_toEndOf="@id/tv_car_price"
        />

    <TextView
        android:id="@+id/tv_car_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_car_battery"
        app:layout_constraintTop_toBottomOf="@id/tv_car_price"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/tv_car_battery_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300 KvH"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_car_price"
        app:layout_constraintStart_toEndOf="@id/tv_car_battery"
        />
    <TextView
        android:id="@+id/tv_car_horsepower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_car_horsepower"
        app:layout_constraintTop_toBottomOf="@id/tv_car_battery"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/tv_car_horsepower_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300 hp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_car_battery"
        app:layout_constraintStart_toEndOf="@id/tv_car_horsepower"
        />
    <TextView
        android:id="@+id/tv_car_recharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_car_recharge"
        app:layout_constraintTop_toBottomOf="@id/tv_car_horsepower"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/tv_car_recharge_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="29 min"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_car_horsepower"
        app:layout_constraintStart_toEndOf="@id/tv_car_recharge"
        />

</androidx.constraintlayout.widget.ConstraintLayout>